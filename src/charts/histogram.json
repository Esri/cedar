{
  "inputs": [
    { "name": "x", "type": [ "numeric", "string" ], "required": false },
    { "name": "y", "type": [ "string" ], "required": true }
  ],
  "query": {},
  "template":{
    "padding": "strict",
    "axes": [
      {
        "type": "x",
        "scale": "x",
        "titleOffset": 0,
        "title": "{x.label}",          
        "properties": {
          "title": {
            "fontSize": {"value": 15},
            "fill": {"value": "#999"},
            "fontWeight": {"value": "bold"}
          },          
          "axis": {
             "stroke": {"value": "#dbdad9"},
             "strokeWidth": {"value": 1.5}
          },
          "ticks": {
             "stroke": {"value": "#dbdad9"}
          },
          "labels": {
            "dy": {"value": -10},
            "fontSize": {"value": 0},            
            "fill": {"value": "#999"},
            "angle": {"value": 0},
            "align": {"value": "left"},
            "baseline": {"value": "middle"}
          }
        }
      },
      {
        "type": "y",
        "scale": "y",
        "titleOffset": 45,
        "title": "{y.label}",          
        "properties": {
          "title": {
            "fontSize": {"value": 15},
            "fill": {"value": "#999"},
            "fontWeight": {"value": "bold"}
          },          
          "axis": {
             "stroke": {"value": "#dbdad9"},
             "strokeWidth": {"value": 1.5}
          },
          "ticks": {
             "stroke": {"value": "#dbdad9"}
          },
          "labels": {
            "fontSize": {"value": 14},
            "fill": {"value": "#999"}
          }
        }
      }      
    ],
    "data": [
      {
        "name": "table",
        "format": {"property": "features"},
        "transform": [
          {"type": "bin", "field": "data.attributes.{x.field}", "output": "bin_yield"},
          {
            "type": "aggregate",
            "groupby": ["bin_yield"],
            "fields": [{"op": "count", "field": "*"}]
          }
        ]
      }
    ],    
    "marks": [
      {
        "from": {"data": "table"},
        "properties": {
          "enter": {
            "width": {"band": true, "offset": -1, "scale": "x"},
            "x": {"field": "data.bin_yield", "scale": "x"},
            "y": {"field": "data.count", "scale": "y"},
            "y2": {"scale": "y", "value": 0 }
          },
          "hover": {
            "fill": {"value": "#29b6ea"}
          },
          "update": {
            "fill": {"value": "#0079c1"}
          }
        },
        "type": "rect"
      },
      {
        "type": "text",
        "interactive": false,
        "from": { "data": "table" },
        "properties": {
          "enter": {
            "x": {"scale": "x", "field": "data.bin_yield"},
            "dx": {"scale": "x", "offset": -1},
            "y": {"value": 355},
            "text": {"field": "data.bin_yield"},
            "baseline": {"value": "middle"},
            "align": {"value": "center"},
            "fill": {"value": "#999"},
            "fontSize": {"value": 14}
          }
        }
      }      
    ],    
    "scales": [
      {
        "domain": {
          "data": "table",
          "field": "data.bin_yield"
        },
        "name": "x",
        "range": "width",
        "type": "ordinal"
      },
      {
        "domain": {
          "data": "table",
          "field": "data.count"
        },
        "name": "y",
        "nice": true,
        "range": "height"
      }
    ]
  }
}