<script>
  var chart = new Cedar({
    "type":"scatter",
    "dataset":{
      "url":"http://maps2.dcgis.dc.gov/dcgis/rest/services/DCGIS_DATA/Education_WebMercator/MapServer/5",
      "query":{},
      "mappings":{
        "x": {"field":"POPULATION_ENROLLED_2008","label":"Student Enrollment (2008)"},
        "y": {"field":"SQUARE_FOOTAGE","label":"Square Footage"},
        "color":{"field":"FACUSE","label":"Facility Type"}
      }
    }
  });

  chart.tooltip = {
    "title": "{NAME}",
    "content": "{POPULATION_ENROLLED_2008} students with a {CAPACITY} student capacity."
  }

  chart.show({
    elementId: "#chart",
    autolabels: true
  });
  $(function() {
    $( "#resizable" ).resizable({
      resize: function() { chart.update(); }
    });
  });
</script>