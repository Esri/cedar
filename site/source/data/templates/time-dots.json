{
  "inputs":[
    {"name":"time","type":["time"], "required":true},
    {"name":"aspect","type":["string"], "required":true},
    {"name":"facet","type":["string"], "required":true},
    {"name":"color","type":["string"], "required":true}
  ],
  "template": {
    "padding": "strict",
    "data": [
      {
        "name": "crimes",
        "format": {"type": "json", "property": "features", "parse": {"attributes.{time.field}":"date"}}
      },
      {
        "name": "variety",
        "source": "crimes",
        "transform": [
          {"type": "facet", "groupby": ["attributes.{aspect.field}"]}
        ]
      },
      {
        "name": "{facet.field}",
        "source": "crimes",
        "transform": [
          {"type": "facet", "groupby": ["attributes.{facet.field}"]}
        ]
      }    
    ],
    "scales": [
      {
        "name": "g",
        "type": "ordinal",
        "range": "height",
        "padding": 0.45,
        "domain": {"data": "{facet.field}", "field": "key"}
      },    
      {
        "name": "x",
        "type": "time",
        "round": true,
        "range": "width",
        "domain": {"data": "crimes", "field": "attributes.{time.field}"}
      },  
      {
        "name": "c",
        "type": "ordinal",
        "range": "category10"
      }
    ],
    "axes": [
      {
        "type": "x", 
        "scale": "x",
        "properties": {
          "title": {
            "fontSize": {"value": 15},
            "fill": {"value": "#999"},
            "fontWeight": {"value": "bold"}
          },
          "ticks": {
             "stroke": {"value": "#dbdad9"}
          },
          "labels": {
            "fill": {"value": "#999"},
            "fontSize": {"value": 13}
          },
          "axis": {
             "stroke": {"value": "#dbdad9"},
             "strokeWidth": {"value": 1}
          }
        }
      }
    ],
    "legends": [
      {
        "fill": "c",
        "title": "{color.field}",
        "offset": 0,
        "properties": {
          "symbols": {
            "fillOpacity": {
              "value": 0.5
            },
            "stroke": {
              "value": "transparent"
            }
          }
        }
      }
    ],  
    "marks": [
      {
        "type": "text",
        "from": {"data": "crimes"},
        "properties": {
          "enter": {
            "x": {"group": "width", "mult": 0.5},
            "y": {"scale": "g", "field": "attributes.{facet.field}", "offset": -2},
            "fontWeight": {"value": "bold"},
            "text": {"field": "attributes.{facet.field}"},
            "align": {"value": "center"},
            "baseline": {"value": "bottom"},
            "fill": {"value": "#000"}
          }
        }
      },
      {
        "type": "group",
        "from": {"data": "{facet.field}"},
        "scales": [
          {
            "name": "y",
            "type": "ordinal",
            "range": "height",
            "points": true,
            "domain": {"data": "variety", "field": "key"}
          }
        ],
        "axes": [
          {
            "type": "y",
            "scale": "y",
            "tickSize": 0,
            "properties": {"axis": {"stroke": {"value": "transparent"}}}
          }
        ],
        "properties": {
          "enter": {
            "x": {"value": 0.5},
            "y": {"scale": "g", "field": "key"},
            "height": {"scale": "g", "band": true},
            "width": {"group": "width"},
            "stroke": {"value": "#ccc"}
          }
        },
        "marks": [
          {
            "type": "symbol",
            "properties": {
              "enter": {
                "x": {"scale": "x", "field": "attributes.{time.field}"},
                "y": {"scale": "y", "field": "attributes.{aspect.field}"},
                "size": {"value": 40},
                "stroke": {"scale": "c", "field": "attributes.{color.field}"},
                "strokeWidth": {"value": 2}
              }
            }
          }
        ]
      }
    ]
  }
}